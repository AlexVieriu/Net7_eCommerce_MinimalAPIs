<div class="col">
    <div class="card p-3 m-2" style="width: 25rem;">
        <img src="@Product.ImageLink" class="card-img-top" alt="baaaa.. nu gasesc nici o imagine">
        <a class="card-title fw-bold" href="/product/@Product.ProductId">@Product.Name</a>
        <p class="card-text">@Product.Description</p>
        <hr />
        <h6 class="text-danger">Price: @Product.Price</h6>
    </div>
</div>


@code {
    [Parameter]
    public Product Product { get; set; }
}


