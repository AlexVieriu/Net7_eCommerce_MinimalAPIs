<div class="col">
    <div class="card p-4 mt-4" style="width: 15rem;">
        <div class="row">
            <img src="@Product.ImageLink" class="card-img-top col" alt="baaaa.. nu gasesc nici o imagine">
            <div class="col">
                <a class="card-title fw-bold pb-4" href="/product/@Product.ProductId">@Product.Name</a>
                <p>@Product.Brand</p>
            </div>
        </div>
        <hr />
        <h6 class="text-danger">Price: @Product.Price.ToString("c")</h6>
    </div>
</div>


@code {
    [Parameter]
    public Product Product { get; set; }
}


